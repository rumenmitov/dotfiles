#background = #121212
background-opacity = 0.9

gtk-titlebar = false
confirm-close-surface = false
gtk-tabs-location = left

shell-integration = zsh

keybind = ctrl+shift+,=unbind
keybind = ctrl+b>r=reload_config

keybind = ctrl+b>c=new_tab
keybind = ctrl+b>n=next_tab
keybind = ctrl+b>p=previous_tab
keybind = alt+tab=toggle_tab_overview

keybind = ctrl+b>shift+5=new_split:right
keybind = ctrl+b>shift+'=new_split:down
keybind = ctrl+b>z=toggle_split_zoom

keybind = ctrl+b>h=goto_split:left
keybind = ctrl+b>l=goto_split:right
keybind = ctrl+b>j=goto_split:down
keybind = ctrl+b>k=goto_split:up

keybind = ctrl+b>equal=equalize_splits

keybind = ctrl+shift+j=resize_split:down,15
keybind = ctrl+shift+k=resize_split:up,15
keybind = ctrl+shift+h=resize_split:left,15
keybind = ctrl+shift+l=resize_split:right,15

keybind = ctrl+b>x=close_surface
