font-family = "CaskaydiaCove Nerd Font"
font-size = 18
background = #121212
background-opacity = 0.8

gtk-titlebar = false
confirm-close-surface = false

shell-integration = zsh

keybind = ctrl+shift+,=unbind
keybind = ctrl+b>r=reload_config

keybind = ctrl+b>c=new_tab
keybind = ctrl+b>n=next_tab
keybind = ctrl+b>p=previous_tab

keybind = ctrl+b>\=new_split:left
keybind = ctrl+b>shift+5=new_split:up
keybind = ctrl+b>z=toggle_split_zoom

keybind = ctrl+b>shift+p=goto_split:left
keybind = ctrl+b>shift+n=goto_split:right

keybind = ctrl+b>equal=equalize_splits

keybind = ctrl+shift+j=resize_split:down,15
keybind = ctrl+shift+k=resize_split:up,15
keybind = ctrl+shift+h=resize_split:left,15
keybind = ctrl+shift+l=resize_split:right,15

keybind = ctrl+b>x=close_window
